<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Day 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day1Workout"
            android:onClick="startWorkout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Day 2"
            android:onClick="startWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day2Workout" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/day1Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Day 3"
            android:onClick="startWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day3Workout" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/day2Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Day 4"
            android:onClick="startWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day4Workout" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/day3Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="View Previous Workouts"
            android:onClick="viewPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previousWorkout" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/day4Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
    />
</android.support.constraint.ConstraintLayout>