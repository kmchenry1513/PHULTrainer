<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Day 1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/day1Workout"
            android:onClick="startWorkout"
            android:background="@drawable/button_bg"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/day2Workout" android:layout_marginBottom="8dp"
    />
    <Button
            android:text="Day 2"
            android:onClick="startWorkout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/day2Workout"
            android:background="@drawable/button_bg"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/day1Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/day3Workout" android:layout_marginBottom="8dp"/>
    <Button
            android:text="Day 3"
            android:onClick="startWorkout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/day3Workout"
            android:background="@drawable/button_bg"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/day2Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/day4Workout" android:layout_marginBottom="8dp"/>
    <Button
            android:text="Day 4"
            android:onClick="startWorkout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/day4Workout"
            android:background="@drawable/button_bg"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/day3Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/previousWorkout" android:layout_marginBottom="8dp"/>
    <Button
            android:text="Previous"
            android:onClick="viewPrevious"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/previousWorkout"
            android:background="@drawable/button_bg" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/day4Workout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/weights"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/day1Workout"/>
</android.support.constraint.ConstraintLayout>