<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Day 1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/day1Workout"
            android:onClick="startWorkout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:background="@drawable/button_bg" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/day2Workout"/>
    <Button
            android:text="Day 2"
            android:onClick="startWorkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/day2Workout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:background="@drawable/button_bg"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/day3Workout"/>
    <Button
            android:text="Day 3"
            android:onClick="startWorkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/day3Workout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:background="@drawable/button_bg"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/day4Workout"/>
    <Button
            android:text="Day 4"
            android:onClick="startWorkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/day4Workout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:background="@drawable/button_bg"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/previousWorkout"/>
    <Button
            android:text="Previous"
            android:onClick="viewPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/previousWorkout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:background="@drawable/button_bg" android:textSize="14sp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>