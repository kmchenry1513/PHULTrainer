<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/mainlayout">


    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp" android:id="@+id/constraintLayout">

        <TextView
                android:text="Squat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout1"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:tag="weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout1set1"
                app:layout_constraintTop_toBottomOf="@+id/workout1" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout1set2"
                app:layout_constraintTop_toBottomOf="@+id/workout1"
                app:layout_constraintStart_toEndOf="@+id/workout1set1"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout1set3"
                app:layout_constraintTop_toBottomOf="@+id/workout1"
                app:layout_constraintStart_toEndOf="@+id/workout1set2"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout1set4"
                app:layout_constraintTop_toBottomOf="@+id/workout1"
                app:layout_constraintStart_toEndOf="@+id/workout1set3"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp" android:id="@+id/constraintLayout2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
                android:text="Deadlift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:tag="weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout2set1"
                app:layout_constraintTop_toBottomOf="@+id/workout2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:id="@+id/workout2set2"
                app:layout_constraintTop_toBottomOf="@+id/workout2"
                app:layout_constraintStart_toEndOf="@+id/workout2set1"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout2set3"
                app:layout_constraintTop_toBottomOf="@+id/workout2"
                app:layout_constraintStart_toEndOf="@+id/workout2set2"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout2set4"
                app:layout_constraintTop_toBottomOf="@+id/workout2"
                app:layout_constraintStart_toEndOf="@+id/workout2set3"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp" android:id="@+id/constraintLayout3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <TextView
                android:text="Leg Press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:tag="weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout3set1"
                app:layout_constraintTop_toBottomOf="@+id/workout3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:id="@+id/workout3set2"
                app:layout_constraintTop_toBottomOf="@+id/workout3"
                app:layout_constraintStart_toEndOf="@+id/workout3set1"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout3set3"
                app:layout_constraintTop_toBottomOf="@+id/workout3"
                app:layout_constraintStart_toEndOf="@+id/workout3set2"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout3set4"
                app:layout_constraintTop_toBottomOf="@+id/workout3"
                app:layout_constraintStart_toEndOf="@+id/workout3set3"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp" android:id="@+id/constraintLayout4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <TextView
                android:text="Leg Curl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:tag="weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout4set1"
                app:layout_constraintTop_toBottomOf="@+id/workout4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:id="@+id/workout4set2"
                app:layout_constraintTop_toBottomOf="@+id/workout4"
                app:layout_constraintStart_toEndOf="@+id/workout4set1"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout4set3"
                app:layout_constraintTop_toBottomOf="@+id/workout4"
                app:layout_constraintStart_toEndOf="@+id/workout4set2"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout4set4"
                app:layout_constraintTop_toBottomOf="@+id/workout4"
                app:layout_constraintStart_toEndOf="@+id/workout4set3"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="5dp" android:id="@+id/constraintLayout5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

        <TextView
                android:text="Calf Exercise (any)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout5"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:tag="weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout5set1"
                app:layout_constraintTop_toBottomOf="@+id/workout5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:id="@+id/workout5set2"
                app:layout_constraintTop_toBottomOf="@+id/workout5"
                app:layout_constraintStart_toEndOf="@+id/workout5set1"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout5set3"
                app:layout_constraintTop_toBottomOf="@+id/workout5"
                app:layout_constraintStart_toEndOf="@+id/workout5set2"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="0"
                android:onClick="addRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workout5set4"
                app:layout_constraintTop_toBottomOf="@+id/workout5"
                app:layout_constraintStart_toEndOf="@+id/workout5set3"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="Start Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startTimerBtn"
            app:layout_constraintStart_toEndOf="@+id/timerTV" android:layout_marginStart="12dp"
            android:onClick="startTimer"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"/>
    <TextView
            android:text="30s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timerTV"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="30sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"/>
    <Button
            android:text="Finish Workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finishWktBtn"
            android:layout_marginStart="8dp"
            android:onClick="finishWorkout"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Set Weights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setWgtBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="setWeight" android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"/>
</android.support.constraint.ConstraintLayout>